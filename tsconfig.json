{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "rootDir": "src",
    "outDir": "out",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "types": ["node", "vscode"]
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "src/panels/buildDetails/webview",
    "src/panels/nodeDetails/webview",
    "src/panels/shared/webview"
  ]
}
