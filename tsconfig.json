{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "rootDir": "src",
    "outDir": "out",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "jsx": "react-jsx"
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "vite.config.ts",
    "src/panels/buildDetails/webview/**",
    "src/panels/nodeDetails/webview/**",
    "src/panels/shared/webview/components/**",
    "src/panels/shared/webview/icons/**",
    "src/panels/shared/webview/lib/**"
  ]
}
